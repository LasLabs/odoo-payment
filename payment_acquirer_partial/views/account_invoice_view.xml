<openerp>
    <data>
        
        <record model="ir.ui.view" id="account_invoice_view_form">
            <field name="name">account.invoice.view.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@states='open']" position="after">
                    <button name="%(payment_acquirer_partial_wizard_action)d"
                            string="Charge Payment"
                            states="open"
                            type="action"
                            class="oe_highlight" />
                </xpath> 
            </field>
        </record>
        
    </data>
</openerp>
